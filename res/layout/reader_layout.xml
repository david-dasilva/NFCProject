<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ReaderActivity"
                android:orientation="vertical">
                
    
                <LinearLayout 
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    
            
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Message : "
            android:id="@+id/tv2Message"
            />
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvMessage"
            />
                </LinearLayout>
               
    
    <TableLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp">
            
    <TextView
            android:background="@drawable/shape"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/info"
            android:id="@+id/textView"
            android:layout_marginTop="52dp"/>
    
        <TextView
            android:background="@drawable/shape"
            android:layout_width="fill_parent"
            android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/textViewd"
            android:layout_marginTop="52dp"/>
            
            
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp">
            

        <TextView
            android:background="@drawable/shape"
            android:layout_width="fill_parent"
            android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/iddpoint"
                android:id="@+id/textView2"/>

        <TextView
            android:background="@drawable/shape"
            android:layout_width="fill_parent"
            android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/tvid"
                android:id="@+id/tvId"/>
            
            
        </TableRow>
        
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp">
            
        <TextView
            android:background="@drawable/shape"
            android:layout_width="fill_parent"
            android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/ecrivable"
                android:id="@+id/textView4"/>

        <TextView
            android:background="@drawable/shape"
            android:layout_width="fill_parent"
            android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/ecriture"
                android:id="@+id/tvEcriture"/>
            
            
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp">
            
        <TextView
            android:background="@drawable/shape"
            android:layout_width="fill_parent"
            android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/verrouillable"
                android:id="@+id/textView5"/>

        <TextView
            android:background="@drawable/shape"
            android:layout_width="fill_parent"
            android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lockable"
                android:id="@+id/tvLockable"/>
        </TableRow>
        
        
    </TableLayout>


</LinearLayout>
